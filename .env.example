# 生产环境配置文件
# 复制此文件为 .env 并根据需要修改配置

# 后端配置
BACKEND_PORT=8080
GIN_MODE=release
DATA_DIR=/app/data

# 前端配置
FRONTEND_PORT=80
FRONTEND_HTTPS_PORT=443

# 数据库配置
DB_PATH=/app/data/read-it-later.db

# 安全配置
# 生产环境建议设置更复杂的密钥
# JWT_SECRET=your-jwt-secret-here
# API_KEY=your-api-key-here

# 网络配置
DOCKER_NETWORK=app-network

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
