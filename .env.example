# Read It Later 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 应用配置
APP_ENV=production
APP_PORT=8080

# 数据库配置
DATA_DIR=/app/data

# 前端配置
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443

# Docker 镜像配置
DOCKER_REGISTRY=docker.io
FRONTEND_IMAGE=adoom2018/read-it-later-frontend
BACKEND_IMAGE=adoom2018/read-it-later-backend
IMAGE_TAG=latest

# 网络配置
BACKEND_URL=http://backend:8080

# 安全配置
GIN_MODE=release
CORS_ALLOWED_ORIGINS=*

# 日志配置
LOG_LEVEL=info

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s
